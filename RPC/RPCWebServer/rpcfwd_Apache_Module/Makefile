##
##  Makefile -- Build procedure for sample rpcfwd Apache module
##  Autogenerated via ``apxs -n rpcfwd -g''.
##

builddir=.
top_srcdir=/usr/share/apache2
top_builddir=/usr/share/apache2
include /usr/share/apache2/build/special.mk

CXX=g++
CXXFLAGS=-std=c++11

# -I../../../Common -L../../../Common -lCommon

#SRC = mod_rpcfwd.cpp SimpleSockets.cpp

#   the used tools
APACHECTL=apachectl

#   additional defines, includes and libraries
#DEFS=-Dmy_define=my_value
#INCLUDES=-I../../../Common
#LIBS=-L../../../Common -lCommon

#   the default target
all: local-shared-build

#   install the shared object file into Apache 
install: install-modules-yes

#   cleanup
clean:
	-rm -f mod_rpcfwd.o mod_rpcfwd.lo mod_rpcfwd.slo mod_rpcfwd.la 

#   simple test
test: reload
	lynx -mime_header http://localhost/rpcfwd

#   install and activate shared object by reloading Apache to
#   force a reload of the shared object file
reload: install restart

#   the general Apache start/restart/stop
#   procedures
start:
	$(APACHECTL) start
restart:
	$(APACHECTL) restart
stop:
	$(APACHECTL) stop

